---
import MainSite from './MainSite.astro';

export interface WebsiteAssets {
	homepage: {
		main_logo: string;
	};
}

export interface Props {
	css_attributes_parent: string[] | undefined;
	css_attributes_child: string[] | undefined;
	id: string;
	websiteAssets: WebsiteAssets;
}
const { css_attributes_parent = [], css_attributes_child = [], id, websiteAssets } = Astro.props;
---

<div>
	<div
		class={'absolute w-full overflow-hidden ' +
			css_attributes_parent.map((attribute) => {
				return attribute + ' ';
			})}
		id={id}>
		<div
			class={'relative dark:bg-[#FAF2E4] overflow-hidden ' +
				css_attributes_child.map((attribute) => {
					return attribute + ' ';
				})}
			id={id + '-child'}>
			<MainSite websiteAssets={websiteAssets} id={id} />
		</div>

		<style></style>
	</div>
</div>
