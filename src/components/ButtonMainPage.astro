---
export interface Props {
	text: string;
	idButton: string;
}
const { text, idButton } = Astro.props;
---

<div
	class="sm:w-sm sm:mx-auto rounded md:mt-10 dark:bg-gray-light bg-gray-dark h-15 flex shadow-xl group cursor-pointer"
	id={idButton}
	onclick="window.dispatchEvent(new Event(this.id));">
	<div class="m-auto text-xl text-white group-hover:scale-115 transform transition-all">
		{text}
		<slot />
	</div>
</div>
