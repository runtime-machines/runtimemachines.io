---
export interface Props {
	image: string | null | undefined;
	text: string;
	css_classes: string[];
}
const { image, text, css_classes } = Astro.props;
---

<div
	class={'m-auto sm:h-xl h-lg sm:w-sm w-xs rounded shadow-xl <md:dark:shadow-[#ff8855] shadow-dark-500 grid auto-rows-auto bg-[#343434] dark:bg-[#444444] sm:mb-0 mb-10 ' +
		css_classes.map((el) => {
			return el;
		})}>
	<!-- dark:shadow-glow shadow-white-glow -->
	<div class="m-auto sm:h-15 h-20 flex">
		<span class="text-white m-auto font-extrabold text-3xl">{text}</span>
	</div>
	<div class="rounded w-full mb-0 self-end">
		<img src={image} class="w-full rounded" alt="" />
	</div>
</div>
