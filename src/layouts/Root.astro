---
import 'virtual:windi.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="dark:bg-gray-900 bg-gray-700 w-full h-full overflow-x-hidden max-w-[100%]">
	<head>
		<title>Page - {title}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
		<link rel="stylesheet" href="https://use.typekit.net/ljf4mrn.css" />
		<meta name="msapplication-TileColor" content="#da532c" />
		<meta name="theme-color" content="#ffffff" />
	</head>
	<body class="dark:bg-gray-900 bg-gray-700 h-full select-none">
		<div class="h-full overflow-x-hidden relative">
			<slot />
		</div>
	</body>
</html>
