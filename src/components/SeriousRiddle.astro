			0 0 102px #ff0000, 0 0 151px #ff0000;
	}

	.vanishing {
		animation-name: continue;
		animation-duration: 3s;
		animation-delay: 2s;
		animation-iteration-count: infinite;
	}

	@keyframes continue {
		0% {
