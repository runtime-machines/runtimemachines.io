---
export interface Props {
	text: string;
	idButton: string;
}
const { text, idButton } = Astro.props;
---

<div
	class="sm:w-sm rounded md:mt-10 bg-gray-light dark:bg-gray-dark h-15 flex shadow-xl"
	id={idButton}
	onclick="window.dispatchEvent(new Event(this.id));">
	<div class="m-auto text-xl text-white font-bold">
		{text}
		<slot />
	</div>
</div>
