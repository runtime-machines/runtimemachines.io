---
export interface Props {
	text: string;
}
const { text, idButton } = Astro.props;
---

<div
	class="sm:w-sm w-xs w-sm rounded bg-[#4A4A4A] dark:bg-[#4A4A4A] h-15 flex shadow-xl"
	id={idButton}
	onclick="window.dispatchEvent(new Event(this.id));">
	<div class="m-auto text-xl text-white font-bold">
		{text}
		<slot />
	</div>
</div>
