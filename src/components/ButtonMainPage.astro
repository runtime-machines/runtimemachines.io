---
export interface Props {
	text: string;
}
const { text, idButton } = Astro.props;
---

<div
	class="sm:w-sm sm:mx-auto rounded md:mt-10 bg-[#343434] dark:bg-[#444444] h-15 flex shadow-xl group cursor-pointer"
	id={idButton}
	onclick="window.dispatchEvent(new Event(this.id));">
	<div class="m-auto text-xl text-white font-bold group-hover:scale-115 transform transition-all">
		{text}
		<slot />
	</div>
</div>
